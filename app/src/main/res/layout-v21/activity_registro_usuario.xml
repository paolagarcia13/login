<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro Usuario"
        android:textSize="25sp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/cedula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cedula"
        android:textSize="18sp"
        android:layout_marginTop="80dp"/>
    <EditText
        android:id="@+id/Ecedula"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese Cedula"
        android:layout_alignBaseline="@id/cedula"
        android:layout_marginLeft="80dp" />
    <ImageButton
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/cedula"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="70dp"
        app:srcCompat="?android:attr/actionModeWebSearchDrawable" />
    <TextView
        android:id="@+id/Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="18sp"
        android:layout_marginTop="125dp"/>
    <EditText
        android:id="@+id/Enombre"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese Nombre"
        android:layout_alignBaseline="@+id/Nombre"
        android:layout_marginLeft="80dp"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido"
        android:textSize="18sp"
        android:layout_marginTop="165dp"/>
    <EditText
        android:id="@+id/Eapellido"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/apellido"
        android:layout_marginLeft="80dp"
        android:hint="Ingrese Apellido "
        android:textSize="18sp" />
    <TextView
        android:id="@+id/correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo"
        android:textSize="18sp"
        android:layout_marginTop="210dp"/>

    <EditText
        android:id="@+id/Ecorreo"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/correo"
        android:layout_marginLeft="80dp"
        android:hint="Ingrese Correo"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/textCel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celular"
        android:textSize="18sp"
        android:layout_marginTop="255dp"/>
    <EditText
        android:id="@+id/Ecelular"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese celular"
        android:layout_alignBaseline="@+id/textCel"
        android:layout_marginLeft="80dp"
        android:textSize="17sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:text="Rol"
        android:textSize="16sp"
        android:layout_marginTop="300dp"
         />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:hint="seleccione Rol"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="160dp" />

    <Button
        android:id="@+id/btnRegUsu"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:text="Registrar Usuario"/>
    <Button
        android:id="@+id/btnReAdm"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Registrar Administrador"
        android:layout_alignBottom="@+id/btnRegUsu"
        android:textSize="12sp"
        android:layout_marginLeft="200dp"/>
</RelativeLayout>