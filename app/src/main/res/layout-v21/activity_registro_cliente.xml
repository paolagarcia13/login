<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facturacion"
        android:textSize="25sp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/pl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placa"
        android:textSize="18sp"
        android:layout_marginTop="80dp"/>
    <EditText
        android:id="@+id/Eplaca"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese placa del vehÃ­culo"
        android:layout_alignBaseline="@id/pl"
        android:layout_marginLeft="80dp" />
    <ImageButton
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/pl"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="70dp"
        app:srcCompat="?android:attr/actionModeWebSearchDrawable" />

    <TextView
        android:id="@+id/tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo"
        android:textSize="18sp"
        android:layout_marginTop="125dp"/>
    <EditText
        android:id="@+id/ETipo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese tipo del vehiculo (carro,moto.etc)"
        android:layout_alignBaseline="@+id/tipo"
        android:layout_marginLeft="80dp"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="18sp"
        android:layout_marginTop="165dp"/>
    <EditText
        android:id="@+id/ENombre"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nombre"
        android:layout_marginLeft="80dp"
        android:hint="Ingrese nombre del cliente "
        android:textSize="18sp" />
    <TextView
        android:id="@+id/apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido"
        android:textSize="18sp"
        android:layout_marginTop="210dp"/>

    <EditText
        android:id="@+id/EApellido"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/apellido"
        android:layout_marginLeft="80dp"
        android:hint="Ingrese apellido del cliente"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/cel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celular"
        android:textSize="18sp"
        android:layout_marginTop="255dp"/>
    <EditText
        android:id="@+id/ECel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese celular del cliente"
        android:layout_alignBaseline="@+id/cel"
        android:layout_marginLeft="80dp"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/btnRegCl"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="90dp"
        android:text="Registrar Cliente"
        android:textSize="12sp" />

</RelativeLayout>